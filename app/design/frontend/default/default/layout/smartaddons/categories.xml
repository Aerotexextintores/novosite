        	<action method="addItem"><type>skin_css</type><name>smartaddons/categories/css/ie7.css</name><params/><if>IE 7</if></action> 
        </reference>	
    </default>
	<categories_index_index>
		<reference name="root">
			<action method="setTemplate"><template>page/2columns-right.phtml</template></action>
		</reference>	
        <reference name="head">
          	<action method="addCss"><stylesheet>smartaddons/categories/css/style.css</stylesheet></action>
        	<action method="addItem"><type>skin_css</type><name>smartaddons/categories/css/ie7.css</name><params/><if>IE 7</if></action> 
        </reference>		
		<reference name="content">
			<block type="categories/list" name="categories.list.theme1">
				<action method="setConfig">
					<name>
						<theme>theme1</theme>						
					</name>
				</action>
			</block>
		</reference>
	</categories_index_index>	
</layout>   
	